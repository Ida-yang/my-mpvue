@import "../../../common/vendor.wxss";

.order_detail_wrap {
  background-color: #f5f5f5;
  margin-bottom: 100rpx;
}
.order_pro {
  background-color: rgb(255, 255, 255);
  border-bottom: 1rpx solid #e9eaec;
  display: flex;
  align-items: center;
}
.pro_head {
  flex: 0 0 200rpx;
  display: flex;
  justify-content: center;
}
.pro_content {
  position: relative;
  flex: 0 0 calc(100% - 200rpx);
  padding-right: 20rpx;
  box-sizing: border-box;
}
.pro_image {
  width: 140rpx;
  height: 140rpx;
}
.pro_title {
  line-height: 60rpx;
  font-size: 28rpx;
}
.pro_spec {
  line-height: 48rpx;
  font-size: 26rpx;
  color: #80848f;
}
.pro_desc {
  line-height: 40rpx;
  font-size: 24rpx;
  margin-bottom: 60rpx;
  color: #80848f;
}
.pro_foot {
  line-height: 48rpx;
  font-size: 24rpx;
  position: absolute;
  bottom: 10rpx;
}