<template name="70a87868">
  <view class="_div data-v-daddbce0 contact_detail_wrap">
    <i-cell title="{{contactDetail.name}}" class="_i-cell data-v-daddbce0">
      <view class="_p data-v-daddbce0 cell_info">公司名称：  {{contactDetail.poolname}}</view>
      <view class="_p data-v-daddbce0 cell_info">联系人手机：  {{contactDetail.phone || '无'}}</view>
    </i-cell>
    <i-panel title=" " class="_i-panel data-v-daddbce0">
      <i-tabs current="{{activeName}}" bindchange="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}" class="_i-tabs data-v-daddbce0">
        <i-tab key="first" title="跟进记录" class="_i-tab data-v-daddbce0"></i-tab>
        <i-tab key="second" title="基本信息" class="_i-tab data-v-daddbce0"></i-tab>
        <i-tab key="third" title="相关信息" class="_i-tab data-v-daddbce0"></i-tab>
      </i-tabs>
    </i-panel>
    <view wx:if="{{activeName == 'first'}}" class="_view data-v-daddbce0 follow_view">
      <view wx:key="item.id" key="{{item.id}}" wx:for="{{followData}}" wx:for-index="index" wx:for-item="item" class="_view data-v-daddbce0">
        <i-panel title="{{item.createTime}}" i-class="vice_panel" class="_i-panel data-v-daddbce0"></i-panel>
        <i-fiche full isContent isFooter title="{{item.contacts[0].name}}" extra="{{item.state}}" thumb="{{item.portrait}}" class="_i-fiche data-v-daddbce0">
          <view slot="content" class="_view data-v-daddbce0">
            <rich-text nodes="{{item.followContent}}" class="_rich-text data-v-daddbce0"></rich-text>
          </view>
          <view slot="footer" class="_view data-v-daddbce0"><label class="_span data-v-daddbce0 bgc_span">{{item.followType}}</label> <label wx:if="{{item.contactTime}}" class="_span data-v-daddbce0">    </label> <label class="_span data-v-daddbce0 bgc_span" wx:if="{{item.contactTime}}">{{item.contactTime}}</label>      <label class="_span data-v-daddbce0">{{item.inputType}}</label>
            <view class="_br data-v-daddbce0"></view>
            <image wx:if="{{item.followImg}}" mode="scaleToFill" src="{{item.followImg}}" class="_image data-v-daddbce0 follow_image"></image>
          </view>
        </i-fiche>
      </view>
    </view>
    <view wx:if="{{activeName == 'second'}}" class="_view data-v-daddbce0 font_size_12">
      <i-cell-group class="_i-cell-group data-v-daddbce0">
        <i-cell title="公司名称" value="{{contactDetail.poolname}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="是否为关键人" value="{{contactDetail.isCrux}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="电话" value="{{contactDetail.telephone}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="QQ" value="{{contactDetail.qq}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="邮箱" value="{{contactDetail.email}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="微信" value="{{contactDetail.wechat}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="性别" value="{{contactDetail.sex}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="负责人" value="{{contactDetail.private_employee}}" class="_i-cell data-v-daddbce0"></i-cell>
        <i-cell title="创建时间" value="{{contactDetail.createTime}}" class="_i-cell data-v-daddbce0"></i-cell>
      </i-cell-group>
    </view>
    <view wx:if="{{activeName == 'third'}}" class="_view data-v-daddbce0 font_size_12">
      <i-card full title="商机" class="_i-card data-v-daddbce0">
        <i-cell slot="content" i-class="card_cell" wx:key="item.id" key="{{item.id}}" title="{{item.opportunity_name}}" label="{{item.opportunity_time}}" wx:for="{{opportunityData}}" wx:for-index="index" wx:for-item="item" class="_i-cell data-v-daddbce0">
          <view slot="footer" class="_view data-v-daddbce0"><label style="font-size:11px;color:#80848f" class="_span data-v-daddbce0">{{item.opportunity_achievement}}</label>
            <view class="_br data-v-daddbce0"></view> <label style="font-size:11px;color:#80848f" class="_span data-v-daddbce0">{{item.opportunityProgress[0].progress_name}}</label>
          </view>
        </i-cell>
      </i-card>
      <view class="_view data-v-daddbce0 detail_module"></view>
      <i-card full title="合同" class="_i-card data-v-daddbce0">
        <i-cell slot="content" i-class="card_cell" wx:key="item.id" key="{{item.id}}" title="{{item.contract_name}}" label="{{item.start_date}}" wx:for="{{agreementData}}" wx:for-index="index" wx:for-item="item" class="_i-cell data-v-daddbce0">
          <view slot="footer" class="_view data-v-daddbce0"><label style="font-size:11px;color:#80848f" class="_span data-v-daddbce0">{{item.amount}}</label>
            <view class="_br data-v-daddbce0"></view> <label style="font-size:11px;color:#80848f" class="_span data-v-daddbce0">{{item.contract_type}}</label>
          </view>
        </i-cell>
      </i-card>
    </view>
    <i-tab-bar current="{{activeBar}}" bindchange="handleProxy" class="_i-tab-bar data-v-daddbce0 bottom_btn" data-eventid="{{'1'}}" data-comkey="{{$k}}">
      <i-tab-bar-item key="addressbook" icon="addressbook" current-icon="addressbook" title="打电话" class="_i-tab-bar-item data-v-daddbce0"></i-tab-bar-item>
      <i-tab-bar-item key="trash" icon="trash" current-icon="trash" title="删除" class="_i-tab-bar-item data-v-daddbce0"></i-tab-bar-item>
    </i-tab-bar>
    <i-action-sheet visible="{{showDetele}}" actions="{{deleteActions}}" show-cancel bindcancel="handleProxy" bindchange="handleProxy" mask-closable="{{false}}" data-eventid="{{'2'}}" data-comkey="{{$k}}" class="_i-action-sheet data-v-daddbce0">
      <view slot="header" style="padding: 16px" class="_view data-v-daddbce0">
        <view style="color: #444;font-size: 16px" class="_view data-v-daddbce0">确定吗？</view> <text class="_text data-v-daddbce0">删除后无法恢复哦</text>
      </view>
    </i-action-sheet>
    <i-toast id="toast" class="_i-toast data-v-daddbce0"></i-toast>
    <i-message id="message" class="_i-message data-v-daddbce0"></i-message>
  </view>
</template>